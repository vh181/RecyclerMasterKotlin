<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_bg"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/iconi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/circle"
            android:gravity="center"
            tools:text="V"/>
        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/iconi"
            android:layout_alignTop="@+id/iconi"
            android:layout_toLeftOf="@id/txt_date"
            tools:text="Facebook"/>

        <TextView
            android:id="@+id/subject"
            android:singleLine="true"
            android:layout_below="@+id/user"
            android:layout_alignStart="@+id/user"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            tools:text="Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook"/>
        <TextView
            android:id="@+id/text_preview"
            android:singleLine="true"
            android:layout_below="@+id/subject"
            android:layout_alignStart="@+id/user"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginEnd="24dp"
            tools:text="preview preview preview preview preview preview preview preview preview preview preview preview"/>

        <TextView
            android:id="@+id/txt_date"
            android:textColor="@android:color/darker_gray"
            android:singleLine="true"
            tools:text="20 mai"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/star"
            android:src="@drawable/ic_star_"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>